# Environment variables for ATS Resume Analyzer

# Secret key for JWT tokens (change in production!)
SECRET_KEY=your-super-secret-key-change-in-production

# PostgreSQL database connection
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/ats_db

# Skill matching threshold (percentage)
SKILL_MATCH_THRESHOLD=70

# Demo mode (true/false) - set to false for production
DEMO_MODE=false

# Allowed hosts (comma-separated for multiple)
ALLOWED_HOSTS=*